FROM alpine:latest

COPY . /myMPD/
WORKDIR /myMPD
RUN ./build.sh installdeps
RUN ./build.sh debug
RUN adduser -D -H -h /var/lib/mympd -s /sbin/nologin -g myMPD -u 1000 mympd

ENTRYPOINT ["/myMPD/debug/mympd"]
